<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #D3D3D3;"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CameraDetailController">

    <top>
        <AnchorPane prefHeight="113.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="301.0" fitWidth="800.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Screenshot%202025-10-20%20095707.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </top>

    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>

                <!-- Title -->
                <Label fx:id="cameraTitleLabel"
                       layoutX="53.0" layoutY="25.0"
                       text="CAMERA 1" textFill="#4a4a4a">
                    <font>
                        <Font name="Times New Roman" size="33.0" />
                    </font>
                </Label>

                <!-- Record toggle -->
                <Label layoutX="150.0" layoutY="109.0"
                       text="Record" textFill="#4a4a4a">
                    <font>
                        <Font name="Times New Roman Bold" size="16.0" />
                    </font>
                </Label>

                <ToggleButton fx:id="recordToggleButton"
                              layoutX="133.0" layoutY="144.0"
                              mnemonicParsing="false"
                              onAction="#recordToggleButtonPressed"
                              style="-fx-background-radius: 20; -fx-text-fill: white; -fx-padding: 5 20; -fx-background-color: green;"
                              text="Turn on" />

                <!-- Motion toggle -->
                <Label layoutX="100.0" layoutY="193.0"
                       text="Toggle Motion Sensor" textFill="#4a4a4a">
                    <font>
                        <Font name="Times New Roman Bold" size="16.0" />
                    </font>
                </Label>

                <ToggleButton fx:id="motionToggleButton"
                              layoutX="133.0" layoutY="230.0"
                              mnemonicParsing="false"
                              onAction="#motionToggleButtonPressed"
                              style="-fx-background-radius: 20; -fx-text-fill: white; -fx-padding: 5 20; -fx-background-color: green;"
                              text="Turn on" />

                <!-- Footage selection -->
                <Label layoutX="515.0" layoutY="44.0"
                       text="View Footage" textFill="#4a4a4a">
                    <font>
                        <Font name="Times New Roman Bold" size="16.0" />
                    </font>
                </Label>

                <ComboBox fx:id="footageDropdown"
                          layoutX="487.0" layoutY="74.0"
                          prefWidth="150.0"
                          promptText="Select Footage"
                          onAction="#footageDropdownChanged" />

                <!-- Actual video output -->
                <MediaView fx:id="mediaView"
                           fitHeight="200.0" fitWidth="300.0"
                           layoutX="416.0" layoutY="112.0" />

            </children>
        </AnchorPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="90.0" prefWidth="800.0"
                    style="-fx-background-color: #d18ee2; -fx-border-color: #ac6cbd; -fx-border-width: 8;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="mainMenuButton"
                        layoutX="25.0" layoutY="28.0"
                        mnemonicParsing="false"
                        onAction="#mainMenuButtonPressed"
                        prefHeight="35.0" prefWidth="91.0"
                        style="-fx-background-color: #ac6cbd; -fx-background-radius: 8px;"
                        text="Main Menu" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="devicesButton"
                        layoutX="125.0" layoutY="28.0"
                        mnemonicParsing="false"
                        onAction="#devicesButtonPressed"
                        prefHeight="35.0" prefWidth="99.0"
                        style="-fx-background-color: #ac6cbd; -fx-background-radius: 8px;"
                        text="Devices" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="activityLogButton"
                        layoutX="232.0" layoutY="28.0"
                        mnemonicParsing="false"
                        onAction="#activityLogButtonPressed"
                        prefHeight="35.0" prefWidth="99.0"
                        style="-fx-background-color: #ac6cbd; -fx-background-radius: 8px;"
                        text="Activity Log" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="settingsButton"
                        layoutX="344.0" layoutY="28.0"
                        mnemonicParsing="false"
                        onAction="#settingsButtonPressed"
                        prefHeight="35.0" prefWidth="99.0"
                        style="-fx-background-color: #ac6cbd; -fx-background-radius: 8px;"
                        text="Settings" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="logoutButton"
                        layoutX="667.0" layoutY="28.0"
                        mnemonicParsing="false"
                        onAction="#logoutButtonPressed"
                        prefHeight="35.0" prefWidth="96.0"
                        style="-fx-background-color: #ac6cbd; -fx-background-radius: 8px;"
                        text="Logout" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </bottom>

</BorderPane>
